<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/splashbg"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="false"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:src="@drawable/app_logo"
        android:layout_marginTop="11dp" />


    <ImageView
        android:id="@+id/scouting_logo"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/app_logo"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:src="@drawable/scoutinglogo"/>

    <ImageView
        android:id="@+id/bwebdesign_logo"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bwebdesign_logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scouting_logo"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:singleLine="false"
        android:text="@string/app_status"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffaeab"
        android:layout_above="@+id/bwebdesign_logo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:text="@string/app_version"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fffafff2"
        android:layout_above="@+id/status"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fffafff2"
        android:layout_above="@+id/app_version"
        android:layout_centerHorizontal="true" />


</RelativeLayout>